source "https://rubygems.org"

# Jekyll (use directly instead of github-pages to support Ruby 4.0)
gem "jekyll", "~> 4.4"

# Jekyll plugins
group :jekyll_plugins do
  gem "jekyll-feed"
  gem "jekyll-remote-theme"
  gem "jekyll-seo-tag"
  gem "jekyll-sitemap"
  gem "jekyll-target-blank"
  gem "jemoji"
  gem "webrick"
  gem "csv"
end

# Windows compatibility
platforms :windows do
  gem "tzinfo", ">= 1", "< 3"
  gem "tzinfo-data"
  gem "wdm", ">= 0.1.0"
end
