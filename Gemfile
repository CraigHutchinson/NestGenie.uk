source "https://rubygems.org"

gem "jekyll", "~> 4.4"
gem "bulma-clean-theme"

# Bulma Clean Theme dependencies (declared explicitly for clarity)
group :jekyll_plugins do
  gem "jekyll-feed"
  gem "jekyll-seo-tag"
  gem "jekyll-sitemap"
  gem "jekyll-paginate"
  gem "kramdown-parser-gfm"
  gem "webrick"
  gem "csv"
end

# Windows compatibility
platforms :windows do
  gem "tzinfo", ">= 1", "< 3"
  gem "tzinfo-data"
  gem "wdm", ">= 0.1.0"
end
